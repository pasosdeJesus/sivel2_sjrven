<% content_for :titulo do %>
    <%= Sivel2Gen.titulo %>
<% end %>


<% content_for :menu do %>
  <%= menu_group do %>
    <% if !current_usuario.nil? %>
      <%= menu_item "Casos", sivel2_sjr.casos_path %>
      <%= menu_item "Actividades", cor1440_gen.actividades_path %>
    <% end %>
  <% end %>
  <%= menu_group :pull => :right do %>
    <%= menu_item "Documentacion", "https://venezuela.sjrlac.info/doc/html/index.html"%>
    <% if !current_usuario.nil? %>
      <%= drop_down "Administrar" do %>
        <%= menu_item "Clave", sip.editar_registro_usuario_path %>
        <% if session[:capturacaso_acordeon] %>
          <li><a id="fichacasovertical" href="/fichacasovertical">Ficha caso vertical ✓</a></li>
        <% else %>
          <li><a id="fichacasovertical" href="/fichacasovertical">Ficha caso vertical</a></li>
        <% end %>

        <% if current_usuario.rol == Ability::ROLADMIN || 
          current_usuario.rol == Ability::ROLCOOR ||
          current_usuario.rol == Ability::ROLDIR %>
          <%= menu_item "Usuarios", sip.usuarios_path %>
        <% end %>
        <% if current_usuario.rol == Ability::ROLADMIN || 
          current_usuario.rol == Ability::ROLDIR %>
          <%= menu_item "Tablas Básicas", sip.tablasbasicas_path %>
        <% end %>
      <% end %>
      <%= menu_item "Salir #{current_usuario.nusuario}", sip.sign_out_path %>
    <% else %>
      <%= menu_item "Acerca de", sip.acercade_path %>
      <%= menu_item "Iniciar Sesión", sip.new_usuario_session_path %> 
    <% end %>
  <% end %>
<% end %> 

<% content_for :piedepagina do %>
    <p><span class='derechos'>Dominio Público de acuerdo a Legislación Colombiana<br/>
      Desarrollado para <a href="http://www.sjrlac.org" target="_blank">SJR LAC</a> por <a href="http://www.pasosdeJesus.org" target="_blank">Pasos de Jesús</a>. 2014. 
    </span></p>
<% end %>

<%= render template: "layouts/sip/application" %>
